<Window
    x:Class="MyFirstApplication.TransferToFundsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyFirstApplication"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="320"
    Height="200"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Grid>

        <TextBlock
            Width="auto"
            Height="auto"
            Margin="0,30,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontFamily="Poppins"
            FontSize="20"
            Text="Enter the amount to transfer:" />

        <TextBox
            Name="transferAmount"
            Width="200"
            Height="40"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="26.5"
            TextAlignment="Center" />

        <Button
            Name="enterButton"
            Width="100"
            Height="33"
            Margin="0,0,0,15"
            VerticalAlignment="Bottom"
            Click="enterButton_Click"
            Content="Enter"
            Cursor="Hand"
            FontFamily="Poppins"
            FontSize="20"
            IsDefault="True" />

    </Grid>
</Window>
